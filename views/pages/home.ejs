<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/header") %>
</head>

<body class="bg-gray-100 text-gray-800">
    <div class="container mx-auto p-6">
        <!-- üèÜ Title -->
        <h1 class="text-4xl font-extrabold text-center text-gray-900 mb-6">Pok√©dex</h1>

        <!-- üîç Search Form -->
<form action="/search" method="GET" class="flex justify-center mb-6">
    <input type="text" name="name" placeholder="Search Pok√©mon..."
        class="px-5 py-3 w-80 border-2 border-gray-300 rounded-l-lg focus:outline-none focus:ring-2 focus:ring-red-500 text-black">
    <button type="submit" class="bg-red-600 text-black px-5 py-3 rounded-r-lg hover:bg-red-700 transition-all">
        üîç Search
    </button>
</form>


    <!-- üé¥ Pok√©mon List -->
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-6">
        <% pokemonList.forEach(pokemon=> { %>
            <a href="/pokemon/<%= pokemon.name %>"
                class="pokemon-card bg-white shadow-lg rounded-xl text-center p-5 flex flex-col items-center hover:shadow-2xl">
    
                <!-- üñºÔ∏è Pok√©mon Image -->
                <img src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/<%= pokemon.id %>.png"
                    onerror="this.onerror=null; this.src='https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/<%= pokemon.id %>.png';"
                    alt="<%= pokemon.name %>" class="w-32 h-32 object-contain mb-3">
    
                <!-- ‚ú® Pok√©mon Name -->
                <p class="text-lg capitalize font-semibold text-gray-800">
                    <%= pokemon.name %>
                </p>
            </a>
            <% }); %>
    </div>

    </div>

    <%- include("../partials/footer") %>
</body>

</html>